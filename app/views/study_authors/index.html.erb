<div class="container mt-4">
  <p style="color: green"><%= notice %></p>

  <h1>Authors</h1>

  <%= link_to "New study author", new_study_author_path %>
  <table id="StudyAuthorsTable">
    <thead>
      <tr>
        <th>First Name</th>
        <th>Last Name</th>
      </tr>
    </thead>
    <tbody>
      <% @study_authors.order(:last_name).each do |author| %>
      <tr>
        <td><%= link_to "#{author.first_name}", author %></td>    
        <td><%= author.last_name %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<script>
  new DataTable('#StudyAuthorsTable', {
    layout: {
      topStart:{
        buttons: ['print', 'csv']
      }
    }
  });
</script>
