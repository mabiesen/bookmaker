<div style='padding-top: 30px;'>
  <div>
    <h2><%= @bible_verse.full_id %></h3>
  </div>

  <div>
    <h4><%= @bible_verse.verse_text %></h4>
  </div>
</div>

<hr>

<div style='padding-top: 30px;' class='container-fluid'>
  <div class='row'>
    <div class='col'>
      <h3>Verse In Context</h3>
      <table id='VerseContextTable'>
        <thead>
          <tr>
            <th>Verse</th>
            <th>Verse Text</th>
          </tr>
        </thead>
        <tbody>
          <% @bible_verse.context_array.each do |bv| %>
            <tr>
              <td><%= bv.full_id %></td>
              <% if bv.id == @bible_verse.id %>
                <td style='color: red;'><%= bv.verse_text %></td>
              <% else %>
                <td><%= bv.verse_text %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<hr>

<div style='padding-top: 30px;' class='container-fluid'>
  <div class='row'>
    <div class='col'>
      <h3>Verse Comments</h3>
      <table id='VerseCommentsTable'>
        <thead>
          <tr>
            <th>Comment</th>
          </tr>
        </thead>
        <tbody>
          <% @bible_verse.verse_comments.each do |vc| %>
            <tr>
              <td><%=vc.comment %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class='col'>
      <h3>Verse Collections</h3>
    </div>
  </div>
</div>

<script>
  new DataTable('#VerseCommentsTable', {
      ordering: false,
      searching: false,
      layout: {
        topStart: {
            buttons: ['print','csv']
          }
        }
    });

  new DataTable('#VerseContextTable', {
      ordering: false,
      paging: false,
      searching: false
    });
</script>
